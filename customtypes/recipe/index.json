{
  "format": "custom",
  "id": "recipe",
  "label": "Recipe",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "e.g. Spaghetti Carbonara"
        }
      },
      "ingridients": {
        "type": "StructuredText",
        "config": {
          "label": "Ingridients",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "steps": {
        "type": "StructuredText",
        "config": {
          "label": "Steps",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "repeat": false,
          "customtypes": ["category"]
        }
      },
      "cook_time": {
        "type": "Text",
        "config": {
          "label": "Cook Time",
          "placeholder": "e.g. 30 minutes"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "repeat": false,
          "customtypes": ["author"]
        }
      },
      "receipe_page": {
        "type": "Link",
        "config": {
          "label": "Receipe Page",
          "placeholder": "",
          "select": null,
          "allowTargetBlank": true,
          "allowText": true,
          "repeat": false
        }
      }
    }
  }
}
